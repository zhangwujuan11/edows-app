
page {
	background: transparent;
}
.flex-center {

	display: flex;

	justify-content: center;
	align-items: center;
}
.update-mask {
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0, 0.65);
}
.botton-radius {
	border-bottom-left-radius: 30rpx;
	border-bottom-right-radius: 30rpx;
}
.update-content {
	position: relative;
	top: 0;
	width: 600rpx;
	background-color: #fff;
	box-sizing: border-box;
	padding: 0 50rpx;
	font-family: Source Han Sans CN;
}
.text {

	display: block;

	line-height: 200px;
	text-align: center;
	color: #ffffff;
}
.content-top {
	position: absolute;
	top: -195rpx;
	left: 0;
	width: 600rpx;
	height: 270rpx;
}
.content-top-text {
	font-size: 40rpx;
	font-weight: bold;
	color: #f8f8fa;
	position: absolute;
	top: 120rpx;
	left: 50rpx;
	z-index: 1;
	display: flex;
	flex-direction: column;
}
.content-header {
	height: 70rpx;
}
.update-title {
	font-size: 33rpx;
	font-weight: bold;
	color: #3da7ff;
	line-height: 38px;
}
.update-footer {
	height: 150rpx;
	display: flex;
	align-items: center;
	justify-content: space-around;
}
.box-des-scroll {
	box-sizing: border-box;
	padding: 0 40rpx;
	text-align: left;
}
.box-des {
	font-size: 26rpx;
	color: #000000;
	line-height: 50rpx;
}
.progress-box {
	width: 100%;
}
.update-progress {
	width: 83%;
	height: 40rpx;
	border-radius: 35px;
}
.close-img {
	width: 70rpx;
	height: 70rpx;
	z-index: 1000;
	position: absolute;
	bottom: -120rpx;
	left: calc(50% - 70rpx / 2);
}
.content-button {
	text-align: center;
	flex: 1;
	font-size: 30rpx;
	font-weight: 400;
	color: #ffffff;
	border-radius: 40rpx;
	margin: 0 18rpx;

	height: 80rpx;
	line-height: 80rpx;

	background: linear-gradient(to right, #1785ff, #3da7ff);
}
.flex-column {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.fs24{
 font-size: 24rpx;
}
.update-version{
	font-size: 24rpx;
	margin-top: 10rpx;
	color: #eeeeee;
	text-decoration: underline;
}

